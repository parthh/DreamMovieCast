<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2C2828"
    >
    <LinearLayout
        android:id="@+id/register_1_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/regist_layout_addact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#2BAF73"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/regist_ico"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/white_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#55BF8E"
            android:gravity="center"
            android:minHeight="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/registration_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily=""
                android:gravity="center_vertical|center_horizontal"

                android:text="Add Actor"
                android:textColor="#ffffff"
                android:textScaleX="0.8"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/register_1_title"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical" >
    <RelativeLayout
        android:id="@+id/viewactor_mail_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

            >
        <RelativeLayout
            android:id="@+id/character_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            >
            <EditText
                android:id="@+id/charcter_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:background="@drawable/login_edittext"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:fadingEdge="horizontal"
                android:hint="Character Name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/charimage_url"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/charcter_name"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/image_url"
                android:alpha="0.7"
                android:background="@drawable/login_edittext"
                android:clickable="true"

                android:fadingEdge="horizontal"
                android:hint="Character Image URL"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/actor_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/charimage_url"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:background="@drawable/login_edittext"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:fadingEdge="horizontal"
                android:hint="Actor Name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/actor_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/actor_name"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/image_url"
                android:alpha="0.7"
                android:background="@drawable/login_edittext"
                android:clickable="true"

                android:fadingEdge="horizontal"
                android:hint="Actor Image URL"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/actor_img"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:background="@drawable/login_edittext"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:fadingEdge="horizontal"
                android:hint="Movie title,Franchise Name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="15sp" />
            <Spinner
                android:id="@+id/genere"
                android:layout_width="match_parent"
                android:layout_below="@+id/movie_title"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:background="@drawable/login_spineer"
                android:clickable="true"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textSize="15sp" />
            </RelativeLayout>

    <RelativeLayout
        android:id="@+id/prodtwobutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/character_name_layout"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp" >

        <RelativeLayout
            android:id="@+id/vote_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:clickable="true"
            android:background="#55BF8E"
            android:gravity="center"
            android:minHeight="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/submit_addactor"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:clickable="true"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>
</RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>