<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#323232"
    >
    <TextView
        android:id="@+id/productid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />
    <LinearLayout
        android:id="@+id/register_1_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/regist_layout_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#2BAF73"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/regist_ico"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/white_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#55BF8E"
            android:gravity="center"
            android:minHeight="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/registration_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily=""
                android:gravity="center_vertical|center_horizontal"

                android:text="Actor Detail"
                android:textColor="#ffffff"
                android:textScaleX="0.8"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/viewactor_mail_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/register_1_title"
        >

        <ImageView
            android:id="@+id/charimg_detail_vote"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/default_image"
            android:clickable="true"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/actorimg_detail_vote"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_toRightOf="@+id/as_layout"
            android:background="@drawable/default_image"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:visibility="visible" />
        <FrameLayout
            android:id="@+id/as_layout"
            android:layout_toRightOf="@+id/register_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-15dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/register_image3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/as_layout"
                android:background="@drawable/imageas"
                android:clickable="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="as"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/actor_detail"
        android:layout_below="@+id/viewactor_mail_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"

        >
        <TextView
            android:id="@+id/character_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="character name"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="as"
            android:paddingTop="2dp"
            android:layout_toRightOf="@+id/character_detail_text"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/actor_detail_text"
            android:layout_toRightOf="@+id/as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="actor name"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/prodtwobutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actor_detail"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp" >


        <RelativeLayout
            android:id="@+id/shopingdetail_layout_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:minHeight="30dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/detailico_vote"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#2BAF73"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/rating_1_on" />
            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vote_layout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/shopingdetail_layout_vote"
            android:clickable="true"
            android:background="#55BF8E"
            android:gravity="center"
            android:minHeight="30dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/number_vote"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:clickable="true"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/vote"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/number_vote"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="Votes"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>
s

</RelativeLayout>